<% include layouts/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">New Blog</div>
        <form action="/blogs" method="post" class="ui form">
            <div class="field">
                <label for="title">Title</label>
                <input type="text" placeholder="My awesome blog post" name="blog[title]">
            </div>
            <div class="field">
                <label for="image">Image URL</label>
                <input type="text" placeholder="This sweet image url" name="blog[image]">
            </div>

            <div class="field">
                <label for="body">Content</label>
                <textarea name="blog[body]"></textarea>
            </div>
            
            <input type="submit" class="ui violet big inverted button" value="Submit">
        </form>
    </div>


    <% include layouts/footer %>